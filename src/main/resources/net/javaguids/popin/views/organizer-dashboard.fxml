<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.javaguids.popin.controllers.OrganizerDashboardController">

    <top>
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label fx:id="welcomeLabel"
                   text="Welcome, organizer"
                   style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Label fx:id="statsLabel"
                   text="Loading your events..."
                   style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Actions -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Create Event" onAction="#handleOpenCreateEvent"/>
                <Button text="My Events" onAction="#handleMyEvents"/>
            </HBox>

            <!-- Preview of upcoming events -->
            <Label text="Your upcoming events:"
                   style="-fx-font-size: 14; -fx-font-weight: bold;"/>

            <TableView fx:id="myEventsTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="220"/>
                    <TableColumn fx:id="dateColumn" text="Date &amp; Time" prefWidth="180"/>
                </columns>
            </TableView>

            <Label text="(Open 'My Events' to manage full list)"
                   style="-fx-font-size: 11; -fx-text-fill: #777777;"/>
        </VBox>
    </center>

</BorderPane>