<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.javaguids.popin.controllers.UserListController">

    <top>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label text="All Users"
                       style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            </children>
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <TableView fx:id="userTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="180"/>
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Button text="Delete Selected User" onAction="#handleDeleteUser"/>
                <Button text="Close" onAction="#handleClose"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
