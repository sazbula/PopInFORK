<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.javaguids.popin.controllers.UserListController">

    <top>
        <HBox spacing="10" padding="10">
            <children>
                <Label text="All Users (Admin)" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" padding="10">
            <children>
                <TableView fx:id="userTable" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="180"/>
                        <TableColumn fx:id="roleColumn" text="Role" prefWidth="120"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" padding="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Delete Selected User"
                        onAction="#handleDeleteUser"/>
                <Button text="Close"
                        onAction="#handleClose"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
